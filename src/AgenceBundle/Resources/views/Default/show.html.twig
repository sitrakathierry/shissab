{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/user/css/user.css') }}">
 {% endblock  %}

 {% block scripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/agence/js/show.js') }}"></script>
{% endblock %}

{% block contenu %}
    <div class="wrapper wrapper-content">
        <div class="row">
        	<div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            DETAILS SOCIÉTÉ - {{ agence.nom }}
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <form method="POST" action="{{ path('agence_save') }}" class="form-horizontal">

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Nom</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="nom" required="" value="{{agence.nom}}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label adresse">Adresse</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="adresse" value="{{agence.adresse}}">
                                        </div>
                                    </div>
                                </div>
                        	</div>

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Région</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="region" value="{{agence.region}}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Tél</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="tel" id="tel" value="{{agence.tel}}">
                                        </div>
                                    </div>
                                </div>
                        	</div>

                            <div class="row form-horizontal">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Logo</label>
                                        <div class="col-sm-10">
                                            <input type="file" class="form-control" id="logo">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <input type="hidden" name="logo_agence" id="logo_agence">
                                    <img src="{{ agence.img ? agence.img : asset('img/picture.png') }}" id="logo_img" class="img-thumbnail photo-avatar pull-right">
                                </div>
                            </div>

                            {% if is_granted('ROLE_ADMIN') %}                                 
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label nom">Capacité</label>
                                            <div class="col-sm-10">
                                                <input type="number" class="form-control" name="capacite" required="" value="{{agence.capacite}}">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                        	{# <div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Code</label>
                                        <div class="col-sm-10">
                                            <input type="number" class="form-control" name="code" required="" value="{{agence.code}}">
                                        </div>
                                    </div>
                                </div>
                        	</div> #}



                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <!-- <div class=""> -->
                                        {# <button class="btn btn-white" type="reset">
                                            <i class="fa fa-times"></i>
                                            Annuler
                                        </button> #}
                                        <button class="btn btn-primary" type="submit">
                                            <i class="fa fa-save"></i>
                                            Enregistrer les modifications
                                        </button>
                                    <!-- </div> -->
                                </div>
                            </div>
                            <input type="hidden" name="id" id="id" value="{{agence.id}}">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

