                        			<div class="form-group">
		                            	<label class="col-sm-2 control-label nom">Nom Société *</label>
		                                <div class="col-sm-10">
		                                	<input type="text" class="form-control" name="clm_nom_societe">
		                                </div>
		                            </div>
                        		</div>
                        		<div class="col-lg-6">
                        			<div class="form-group">
		                            	<label class="col-sm-2 control-label prenom">Nom et Prénom Gérant</label>
		                                <div class="col-sm-10">
		                                	<input type="text" class="form-control" name="clm_nom_gerant">
		                                </div>
		                            </div>
                        		</div>
                        	</div>

                        	<div class="row client_morale">
                        		<div class="col-lg-6">
                        			<div class="form-group">
		                            	<label class="col-sm-2 control-label">Adresse</label>
		                                <div class="col-sm-10">
		                                	<input type="text" class="form-control" name="clm_adresse" id="adresse">
		                                </div>
		                            </div>
                        		</div>
