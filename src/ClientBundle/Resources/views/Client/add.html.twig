                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="clp_email">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row client_physique">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Sexe *</label>
                                        <div class="col-sm-10">
                                            <select class="form-control m-b type" name="clp_sexe">
                                                <option value="1">HOMME</option>
                                                <option value="2">FEMME</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label prenom">Situation matrimonial</label>
                                        <div class="col-sm-10">
                                            <select class="form-control m-b type" name="clp_situation">
