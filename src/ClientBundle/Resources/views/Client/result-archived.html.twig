{% if data |length > 0 %}
    
    <div class="table-responsive">
        <table class="table table-striped table-hover" >
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Email</th>
                    <th>Tel</th>
                    <th>Mobile</th>
                    <th>BP</th>
                    <th>Autre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in data %}
                    <tr>
                        <td>{{ item.nom }} {{ item.prenom }}</td>
                        <td>
                            {% if item.adresse %} {{ item.adresse }} {% endif %}
                        </td>
                        <td>
                            {% if item.email %} {{ item.email }} {% endif %}
                        </td>
                        <td>
                            {% if item.tel %} {{ item.tel }} {% endif %}
                        </td>
                        <td>
                            {% if item.mobile %} {{ item.mobile }} {% endif %}
                        </td>
                        <td>
                            {% if item.bp %} {{ item.bp }} {% endif %}
                        </td>
                        <td>
                            {% if item.autre %} {{ item.autre }} {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('client_show', {id: item.id}) }}" class="btn btn-xs btn-primary btn-outline">
                                <i class="fa fa-eye"></i> 
                                Voir
                            </a>

                            {% if is_granted('ROLE_ADMIN') %}

                                <button class="btn btn-xs btn-info btn-outline btn-restore" data-id="{{ item.id }}" data-nom="{{ item.nom }} {{ item.prenom }}">
                                    <i class="fa fa-refresh"></i> Restaurer
                                </button>
                                <button class="btn btn-xs btn-danger btn-outline btn-delete-definitively" data-nom="{{ item.nom }} {{ item.prenom }}" data-action="{{ path('client_delete_definitively', {id: item.id }) }}" data-id="{{ item.id }}">
                                    <i class="fa fa-warning"></i>
                                    Suppr. DÃ©fin
                                </button>
                            {% endif %}

                        </td>
                        
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
{% else %}
    <div class="row">
        <div class="col-lg-12">
            <h2 style="text-align: center;color: #ff9800;border: 1px solid;padding: 5px;background-color: #ff98001a;">
                <i class="fa fa-warning "></i>
                AUCUN RESULTAT
            </h2>
        </div>
    </div>
{% endif %}
