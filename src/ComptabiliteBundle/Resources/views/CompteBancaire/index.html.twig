{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/plugins/jqGrid/ui.jqgrid.css') }}">
 {% endblock  %}

 {% block scripts %}
    {{ parent() }}
    <script src="{{ asset('js/plugins/jqGrid/jquery.jqGrid.min.js') }}"></script>
    <script src="{{ asset('bundles/comptabilite/js/comptebancaire.js') }}"></script>
{% endblock %}

{% block contenu %}

    <div class="wrapper wrapper-content">
        <div class="row">
        	<div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            Ajout compte bancaire
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Banque</label>
                                        <div class="col-sm-10">
                                            <select class="form-control" id="banque">
                                            	<option value=""></option>
                                            	{% for banque in banques %}
                                            	    <option value="{{banque.id}}">{{banque.nom}}</option>
                                            	{% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Numéro de compte</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="num_compte" required="">
                                        </div>
                                    </div>
                                </div>
                        	</div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Solde du compte ({{ agence.deviseSymbole }})</label>
                                        <div class="col-sm-10">
                                            <input type="number" class="form-control" id="solde" required="">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <!-- <div class=""> -->
                                        <!-- <button class="btn btn-white" type="reset">
                                            <i class="fa fa-times"></i>
                                            Annuler
                                        </button> -->
                                        <button class="btn btn-primary" id="btn-save">
                                            <i class="fa fa-save"></i>
                                            Enregistrer
                                        </button>
                                    <!-- </div> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
        	<div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            Liste des comptes bancaires
                        </h5>
                    </div>
                    <div class="ibox-content">
                        
                        <div class="row">
                                
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">RECHERCHE PAR</label>
                                        <div class="col-sm-8">
                                            <select class="form-control m-b" id="recherche_par">
                                                <option value="1">BANQUE</option>
                                                <option value="2">N° de compte</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <input type="text" class="form-control" id="a_rechercher" placeholder="Texte à rechercher ..." style="margin-bottom:10px;">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-2">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            
                                            <div class="btn-group" style="width:100%">
                                                <button class="btn btn-primary" id="btn_search" style="width:50%">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                                <span data-toggle="dropdown" class="btn btn-white dropdown-toggle"><i class="fa fa-download" aria-hidden="true"></i></span>
                                                <ul class="dropdown-menu">
                                                    <li class="cl_export" data-type="xls">
                                                        <a href="#">
                                                            <i class="fa fa-file-excel-o"></i>
                                                            Exporter en Excel
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <table id="list_comptebancaire"></table>
                            </div>
                        </div>
                        <div class="hidden">
                            <form action="" method="POST" id="form_export"></form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

