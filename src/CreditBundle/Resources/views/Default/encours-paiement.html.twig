                                            <select class="form-control m-b" id="type_date">
                                                <option value="0">Tous</option>
                                                <option value="1">Aujourd'hui</option>
                                                <option value="2">Mois</option>
                                                <option value="3">Année</option>
                                                <option value="4">Date spécifique</option>
