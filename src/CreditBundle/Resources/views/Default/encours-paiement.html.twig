                                                <option value="2|0">EN COURS DE PAYEMENT</option>
                                                <option value="2|1">PAYEE</option>
                                            </select> 
                                    </div> 
                            </div> #}
                            <div class="col-sm-3">
                                    <button class="btn btn-primary btn-full-width mt-custom" id="btn_search">
                                        <i class="fa fa-search"></i>
                                    </button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="t-content">
                                <div 
                                    id="list_commande"
