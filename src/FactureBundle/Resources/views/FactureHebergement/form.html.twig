<table class="table table-bordered mw-1500" id="table-hebergement-add">
  <thead class="thead-dark">
    <tr>
      <th scope="col">NB PERSONNE</th>
      <th scope="col">DATE ENTRÉE</th>
      <th scope="col">DATE SORTIE</th>
      <th scope="col">NB NUIT</th>
      <th scope="col">CHAMBRE</th>
      <th scope="col">PETIT DEJEUNER</th>
      <th scope="col">MONTANT ({{ deviseEntrepot.symbole }})</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody id="principal-hebergement">
    <tr data-id="0" class="fact-row row-0">
      
      <td>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="text" class="form-control f_hebergement_nb_pers" name="f_hebergement_nb_pers[]" >
          </div>
        </div>
      </td>
      <td>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="text" class="form-control f_hebergement_date_entree input-datepicker" name="f_hebergement_date_entree[]" >
          </div>
        </div>
      </td>
      <td>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="text" class="form-control f_hebergement_date_sortie input-datepicker" name="f_hebergement_date_sortie[]" >
          </div>
        </div>
      </td>
      <td>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="text" class="form-control f_hebergement_nb_nuit" name="f_hebergement_nb_nuit[]" readonly="">
          </div>
        </div>
      </td>
      <td>
        <div class="form-group">
          <div class="col-sm-12">
            <select class="form-control f_hebergement_chambre select2" name="f_hebergement_chambre[]">
              <option></option>
              {% for chambre in chambres %}
              	<option value="{{ chambre.id }}">{{ chambre.nom }}</option>
              {% endfor %}
            </select>
          </div>
        </div>
      </td>
      <td>
        <div class="form-group">
          <div class="col-sm-12">
          	<select class="form-control f_hebergement_avec_petit_dejeuner" name="f_hebergement_avec_petit_dejeuner[]">
          		<option value="1">INCLUS</option>
        		<option value="2">SUPPLÉMENTAIRE</option>
          	</select>
          </div>
        </div>
      </td>
      <td class="td-montant">
        <div class="form-group">
          <div class="col-sm-12">
            <input type="number" class="form-control f_hebergement_montant" name="f_hebergement_montant[]" >
          </div>
        </div>
      </td>
      
      <td>
      </td>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="6">MONTANT TOTAL</th>
      <th>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="number" class="form-control" name="hebergement_montant" id="hebergement_montant" readonly="" value="0">
          </div>
        </div>
        
      </th>
      <th>
        {# <button class="btn btn-danger btn-full-width btn-remove-row-hebergement">
            <i class="fa fa-trash"></i>
        </button>
        <button class="btn btn-info btn-full-width btn-add-row-hebergement" data-id="0">
            <i class="fa fa-plus"></i>
        </button> #}
      </th>
    </tr>

    <tr>
      <th colspan="6">REMISE</th>
      <th id="">
        <div class="form-group">
          <div class="col-sm-4">
            <select class="form-control" id="f_hebergement_remise_type" name="f_hebergement_remise_type">
              <option value="0">Montant</option>
              <option value="1">%</option>
            </select>
          </div>
          <div class="col-sm-8">
            <input type="number" class="form-control" id="f_hebergement_remise" name="f_hebergement_remise" >
          </div>
        </div>
        <input type="hidden" class="form-control" name="hebergement_remise" id="hebergement_remise" readonly="" value="0">
      </th>
      <th>
      </th>
    </tr>

    <tr>
      <th colspan="6">MONTANT APRÈS DÉDUCTION</th>
      <th>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="number" class="form-control" name="hebergement_a_payer" id="hebergement_a_payer" readonly="" value="0">
          </div>
        </div>
        
      </th>
      <th>
      </th>
    </tr>
    
  </tfoot>
</table>
