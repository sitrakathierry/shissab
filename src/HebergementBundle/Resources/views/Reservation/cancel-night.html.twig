<div class="form-horizontal">
    <div class="form-group">
        <label class="col-lg-3 control-label">Nombre de nuit total</label>
        <div class="col-lg-9">
            <input id="cancel_nb_nuit_total" type="number" class="form-control" value="{{ booking.nbNuit }}" readonly="">
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-3 control-label" for="cancel_nb_nuit">Nombre de nuit à annuler</label>
        <div class="col-lg-9">
            <input type="number" class="form-control" id="cancel_nb_nuit" value="{{ nb_nuit }}" min="1" max="{{ nb_nuit }}">
        </div>
    </div>

    <div class="form-group hidden">
        <label class="col-lg-3 control-label" for="cancel_nb_nuit">Date calcul</label>
        <div class="col-lg-9">
            <input type="text" class="form-control" id="cancel_date_calcul" value="{{ date_calcul | date('d/m/Y') }}">
        </div>
    </div>

    <div class="form-group hidden">
        <label class="col-lg-3 control-label" for="cancel_nb_nuit">Date de sortie</label>
        <div class="col-lg-9">
            <input type="text" class="form-control" id="cancel_date_sortie">
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-3 control-label">Montant à rembourser</label>
        <div class="col-lg-3">
        	<input type="number" class="form-control" placeholder="%" id="cancel_pourcentage_remboursement" min="0" max="100">
        </div>
        <div class="col-lg-6">
        	<input type="number" class="form-control" placeholder="Montant" id="cancel_montant_remboursement">
        </div>
    </div>

    <div class="form-group text-right">
        <span class="btn btn-white btn-sm js_close_modal">Annuler</span>
        <span class="btn btn-primary btn-sm" id="btn_save_cancel_nights">Valider</span>
    </div>
</div>