{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/plugins/jqGrid/ui.jqgrid.css') }}">
    <style type="text/css">
    .select2-container {
          width: 100% !important;
      }

      .select2-container--bootstrap4 .select2-selection--single {
          height: calc(3rem + 3.5px) !important;
      }
  </style>
{% endblock  %}

{% block scripts %}
   {{ parent() }}
   <script src="{{ asset('js/plugins/select2/select2.full.min.js') }}"></script>
    <script src="{{ asset('js/plugins/jqGrid/jquery.jqGrid.min.js') }}"></script>
    <script src="{{ asset('bundles/pdf/js/attribution.js') }}"></script>
{% endblock %}

{% block contenu %}

	<input type="hidden">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        Attribution des mod√®les
                    </h5>
                </div>
                <div class="ibox-content">

                    <div class="row">
                    	<div class="col-lg-12">
                    		<table class="table table-bordered">
                    			<thead>
                    				<th>OBJET</th>
                    				<th>MODELE</th>
                    			</thead>
                    			<tbody>
                                    {% set i = 1 %}
                    				{% for objet in objets %}
                                        <tr>
                                            <td>{{ objet.libelle }}</td>
                                            <td>
                                                <div class="col-sm-6">
                                                    <select 
                                                        class="form-control select2 modele" 
                                                        data-objet="{{ objet.objet }}"
                                                        multiple=""
                                                    >
                                                        <option></option>
                                                        {% for modele in modeles %}
                                                            <option
                                                                value="{{ modele.id }}"
                                                                {% for pdf in objet.pdfs %}
                                                                    {% if modele.id == pdf.modelePdf.id %}
                                                                        selected=""
                                                                    {% endif %}
                                                                {% endfor %}
                                                            >
                                                                {{ modele.nom }}
                                                            </option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </td>
                                        </tr>
                                        {% set i = i + 1 %}
                                    {% endfor %}
                    			</tbody>
                    		</table>
                    	</div>
                    </div>

                    <div class="hr-line-dashed"></div>
			            <div class="row">
			                <div class="col-lg-12">
			                        <button class="btn btn-primary" id="btn-save">
			                            <i class="fa fa-save"></i>
			                            Enregistrer
			                        </button>
			                </div>
			            </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

