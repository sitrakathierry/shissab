{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/plugins/jqGrid/ui.jqgrid.css') }}">
 {% endblock  %}
{% block scripts %}
{{ parent() }}
<script src="{{ asset('js/plugins/jqGrid/jquery.jqGrid.min.js') }}"></script>
<script src="{{ asset('bundles/produit/js/categorieproduit/show.js') }}"></script>
{% endblock %}

{% block contenu %}
	<input type="hidden" id="id" value="{{ categorie.id }}">
    <div class="wrapper wrapper-content">
        <div class="row">
            
        	<div class="col-lg-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5 >
                            Catégorie {{ categorie.nom }}
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">

                        	<div class="row">
                        		<div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Nom *</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" required="" id="nom" value="{{ categorie.nom }}">
                                        </div>
                                    </div>
                                </div>
                        	</div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Image</label>
                                        <div class="col-sm-10">
                                            <input type="file" class="form-control" id="image">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12" style="justify-content: center;align-items: center;display: flex;">
                                  <img src="{{ categorie.image ? categorie.image : '' }}" id="categorie_image" class="img-thumbnail">
                                </div>
                                
                            </div>


                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <!-- <div class=""> -->
                                        {# <button class="btn btn-white" type="reset">
                                            <i class="fa fa-times"></i>
                                            Annuler
                                        </button> #}
                                        <button class="btn btn-primary" id="btn-save">
                                            <i class="fa fa-save"></i>
                                            Mettre à jour
                                        </button>
                                        
                                    <!-- </div> -->
                                </div>
                            </div>
                            <input type="hidden" name="id" id="id" value="0">
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Produits</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-lg-12">
                                <div style="display: flex; justify-content: center; column-gap: 5px;">
                                    <a href="{{ path('produit_consultation', { categorie : categorie.id }) }}" class="btn btn-success" id="">
                                        <i class="fa fa-list"></i>
                                        Liste des produits
                                    </a>
                                    <a href="{{ path('produit_add', { categorie : categorie.id }) }}" class="btn btn-info" id="">
                                        <i class="fa fa-edit"></i>
                                        Création produit
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

