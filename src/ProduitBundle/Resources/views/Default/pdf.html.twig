<page backtop="" backbottom="" backleft="5mm" backright="5mm"> 
    {% include('PdfBundle:Default:entete.html.twig') %}

    <table style="width:100%; margin-top:50px; vertical-align: top;">

        <tr>
            <td colspan="2" style="width: 75%" class="f20">
                {{ produit.nom }} #{{ produit.codeProduit }}
            </td>
            <td rowspan="4" style="width: 25%" class="text-right">
                <img src="{{ produit.qrcode | to_src }}">
            </td>
        </tr>
            
        <tr>
            <td colspan="2" style="width: 75%">
                {{ produit.description | raw }}
            </td>
        </tr>

        <tr>
            <td style="width: 15%">
                <br>
                Prix de vente
            </td>
            <td style="width: 60%">
                <br>
                : {{ produit.prixVente }} KMF / {{ produit.unite }}
            </td>
        </tr>

        <tr>
            <td style="width: 15%">
                Date de cr√©ation
            </td>
            <td style="width: 60%">
                : {{ produit.date | date('d/m/Y') }} 
            </td>
        </tr>

        <tr>
            <td style="width: 15%">
                Vendeur
            </td>
            <td style="width: 60%">
                : {{ produit.agence.nom }} 
            </td>
        </tr>
	    	    
	</table>

    {% if produit.image %}
        <table style="width: 100%; margin-top: 20px">
            <tr>
                <td style="width:100%" class="text-center">
                        <img src="{{ produit.image | to_src }}" alt="" style="width: 80%" class="text-center">
                </td>
            </tr>
        </table>
    {% endif %}


