<div class="form-horizontal">
    <div class="form-group">
        <label class="col-lg-3 control-label" for="id_nom">Nom</label>
        <div class="col-lg-9">
            <input type="text" placeholder="Nom" class="form-control" id="id_nom" value="{{ fournisseur ? fournisseur.nom : '' }}">
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-3 control-label" for="id_nom_contact">Nom contact</label>
        <div class="col-lg-9">
            <input type="text" placeholder="Nom contact" class="form-control" id="id_nom_contact" value="{{ fournisseur ? fournisseur.nomContact : '' }}">
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-3 control-label" for="id_tel_bureau">Tel bureau</label>
        <div class="col-lg-9">
            <input type="text" placeholder="Tel bureau" class="form-control" id="id_tel_bureau" value="{{ fournisseur ? fournisseur.telBureau : '' }}">
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-3 control-label" for="id_tel_mobile">Tel mobile</label>
        <div class="col-lg-9">
            <input type="text" placeholder="Tel mobile" class="form-control" id="id_tel_mobile" value="{{ fournisseur ? fournisseur.telMobile : '' }}">
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-3 control-label" for="id_adresse">Adresse</label>
        <div class="col-lg-9">
            <input type="text" placeholder="Adresse" class="form-control" id="id_adresse" value="{{ fournisseur ? fournisseur.adresse : '' }}">
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-3 control-label" for="id_email">Email</label>
        <div class="col-lg-9">
            <input type="text" placeholder="Email" class="form-control" id="id_email" value="{{ fournisseur ? fournisseur.email : '' }}">
        </div>
    </div>

    <input type="hidden" value="{{fournisseur.id}}" id="id_fournisseur_edit">

    <div class="form-group text-right">
        <span class="btn btn-white btn-sm js_close_modal">Annuler</span>
        <span class="btn btn-primary btn-sm" id="id_save_fournisseur">Enregistrer</span>
    </div>
</div>
