{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/plugins/jqGrid/ui.jqgrid.css') }}">
 {% endblock  %}

 {% block scripts %}
    {{ parent() }}
    <script src="{{ asset('js/plugins/jqGrid/jquery.jqGrid.min.js') }}"></script>
    <script src="{{ asset('bundles/produit/js/fournisseur/index.js') }}"></script>
{% endblock %}

{% block contenu %}
    <div class="wrapper wrapper-content">
        <div class="row">
        	<div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            Fournisseur
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <form class="form-horizontal">

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Nom</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="nom" required="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Nom contact</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="nom_contact" required="">
                                        </div>
                                    </div>
                                </div>
                        	</div>

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Tel bureau</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="tel_bureau" required="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Tel mobile</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="tel_mobile" required="">
                                        </div>
                                    </div>
                                </div>
                        	</div>

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Adresse</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="adresse" required="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Email</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="email" required="">
                                        </div>
                                    </div>
                                </div>
                        	</div>

                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <button class="btn btn-primary pull-right" id="btn-save">
                                        <i class="fa fa-save"></i>
                                        Enregistrer
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
        	<div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                           Liste fournisseurs
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                        	<div class="col-lg-12">
                        		<table id="list_fournisseur"></table>
                        	</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
