{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
 {% endblock  %}
{% block scripts %}
{{ parent() }}
<script src="{{ asset('js/plugins/select2/select2.full.min.js') }}"></script>
<script src="{{ asset('bundles/produit/js/preference-add.js') }}"></script>
{% endblock %}

{% block contenu %}
    <div class="wrapper wrapper-content">
        <div class="row">
        	<div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5 >
                            Préferences des Catégories de produit
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Catégories</label>
                                        <div class="col-sm-10">
                                        	<select class="form-control select2" multiple="" id="categories">
                                        		<option></option>
                                        		{% for categorie in categories %}
                                        			<option 
                                                        value="{{ categorie.id }}"
                                                        {% if preference %}
                                                            {% for id in preference.categoriesList %}
                                                                {% if id == categorie.id %} selected="" {% endif %} 
                                                            {% endfor %}
                                                        {% endif %}
                                                    >{{ categorie.nom }}</option>
                                        		{% endfor %}
                                        	</select>
                                        </div>
                                    </div>
                                </div>
                        	</div>


                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                <div class="col-lg-6">
                                        <button class="btn btn-primary" id="btn-save">
                                            <i class="fa fa-save"></i>
                                            Enregistrer
                                        </button>
                                </div>
                            </div>
                            <input type="hidden" name="id" id="id" value="0">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

