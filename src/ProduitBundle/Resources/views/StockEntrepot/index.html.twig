{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/plugins/jqGrid/ui.jqgrid.css') }}">
{% endblock  %}

{% block scripts %}
   {{ parent() }}
    <script src="{{ asset('js/plugins/jqGrid/jquery.jqGrid.min.js') }}"></script>
    <script src="{{ asset('js/plugins/select2/select2.full.min.js') }}"></script>
    <script src="{{ asset('bundles/produit/js/stockentrepot/index.js') }}"></script>
{% endblock %}

{% block contenu %}

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        Stock d'entrepôt 
                    </h5>
                </div>
                <div class="ibox-content">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 hidden">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">SOCIETE</label>
                                        <div class="col-sm-9">
                                            <select class="form-control m-b agence" id="agence">
                                                {% if is_granted('ROLE_ADMIN') %}
                                                    <option value="0">TOUS</option>
                                                    {% for agence in agences %}
                                                        {% if agence.id != 1 %}
                                                            <option value="{{agence.id}}">{{agence.nom}}</option>
                                                        {% endif %}
                                                    {% endfor %}
                                                {% else %}
                                                    <option value="{{userAgence.agence.id}}" selected="">{{userAgence.agence.nom}}</option>
                                                {% endif %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">ENTREPÔT</label>
                                        <div class="col-sm-8">
                                            <select class="form-control m-b entrepot" id="entrepot">
                                                {% if is_granted('ROLE_RESPONSABLE') %}
                                                    <option value="0">TOUS</option>
                                                    {% for entrepot in entrepots %}
                                                        <option value="{{entrepot.id}}">{{entrepot.nom}}</option>
                                                    {% endfor %}
                                                {% else %}
                                                    <option value="{{userEntrepot.entrepot.id}}" selected="">{{userEntrepot.entrepot.nom}}</option>
                                                {% endif %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">CATEGORIE</label>
                                        <div class="col-sm-8">
                                            <select class="form-control m-b categorie" id="categorie">
                                                <option value="0">Tous</option>
                                                {% for categorie in categories %}
                                                    <option 
                                                        value="{{categorie.id}}"
                                                    >{{categorie.nom}}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                {# <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">RECHERCHE PAR</label>
                                        <div class="col-sm-8">
                                            <select class="form-control m-b statut" id="recherche_par">
                                                <option value="0">CODE PRODUIT</option>
                                                <option value="1">NOM PRODUIT</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <input type="text" class="form-control" id="a_rechercher" placeholder="Texte à rechercher ..." style="margin-bottom:10px;">
                                        </div>
                                    </div>
                                </div> #}

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">PRODUIT</label>
                                        <div class="col-sm-8">
                                            <select class="form-control m-b statut select2" id="produit_id">
                                                <option value="0">TOUS</option>
                                                {% for produit in produits %}
                                                    <option value="{{ produit.id }}"> 
                                                        {{ produit.codeProduit }} | {{ produit.nom }} 
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-1">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <button class="btn btn-primary" id="btn_search" style="width:100%">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="t-content" style="width:100%;overflow:auto;">
                                <table id="liste_produit"></table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


{% endblock %}

