{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/plugins/jqGrid/ui.jqgrid.css') }}">
 {% endblock  %}
{% block scripts %}
{{ parent() }}
<script src="{{ asset('js/plugins/jqGrid/jquery.jqGrid.min.js') }}"></script>
<script src="{{ asset('js/plugins/select2/select2.full.min.js') }}"></script>
<script src="{{ asset('bundles/restaurant/js/table/show.js') }}"></script>
{% endblock %}

{% block contenu %}

	<input type="hidden" id="id" value="{{ table.id }}">
    <div class="wrapper wrapper-content">
        <div class="row">
        	<div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="row">
                            <div class="col-lg-10">
                                <h5 >
                                    {{ table.nom }}
                                </h5>
                            </div>
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">
                                        {% if table.statut == 1 %} 
                                            ACTIVÉ 
                                        {% else %}
                                            DÉSACTIVÉ
                                        {% endif %}
                                    </label>
                                    <div class="col-sm-6">
                                        <input type="checkbox" id="statut_checkbox" {% if table.statut == 1 %} checked {% endif %} />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">N°</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" required="" id="nom" value="{{ table.nom }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label place">Nb place</label>
                                        <div class="col-sm-10">
                                            <input type="number" class="form-control" required="" id="place" value="{{ table.place }}">
                                        </div>
                                    </div>
                                </div>
                        	</div>

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label statut">Statut</label>
                                        <div class="col-sm-10">
                                        	<select class="form-control" id="statut">
                                        		<option value="1" {% if table.statut == 1 %} selected="" {% endif %} >ACTIVÉ</option>
                                        		<option value="2" {% if table.statut == 0 %} selected="" {% endif %} >DÉSACTIVÉ</option>
                                        	</select>
                                        </div>
                                    </div>
                                </div>
                        	</div>


                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                <div class="col-lg-12">
                                        <button class="btn btn-primary" id="btn-save">
                                            <i class="fa fa-save"></i>
                                            Mettre à jour
                                        </button>
                                        <button class="btn btn-danger" id="btn-delete">
                                            <i class="fa fa-trash"></i>
                                            Supprimer
                                        </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

