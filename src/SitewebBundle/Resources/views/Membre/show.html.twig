{% extends 'base.html.twig' %}
{% block stylesheets %}
   {{ parent() }}
   <link rel="stylesheet" href="{{ asset('css/plugins/jqGrid/ui.jqgrid.css') }}">

{% endblock  %}
{% block scripts %}
   {{ parent() }}
   <script src="{{ asset('js/plugins/jqGrid/jquery.jqGrid.min.js') }}"></script>
   <script src="{{ asset('bundles/siteweb/js/membre-show.js') }}"></script>
{% endblock %}
{% block contenu %}
<input type="hidden" id="id_siteweb" value="{{ siteweb.id }}">
<input type="hidden" id="id" value="{{ membre.id }}">
<div class="wrapper wrapper-content">
   <div class="row">
      <div class="col-lg-2">
         <div class="ibox float-e-margins">
            <div class="ibox-content mailbox-content">
               <div class="file-manager">
                  <a class="btn btn-block btn-primary compose-mail" href="{{ siteweb.lien }}" target="_blank">
                  {{ siteweb.nom }} <i class="fa fa-external-link"></i>
                  </a>
                  <div class="space-25"></div>
                  {{ render(controller('SitewebBundle:Default:menu', { id: siteweb.id } )) }}
                  <div class="clearfix"></div>
               </div>
            </div>
         </div>
      </div>
      <div class="col-lg-10 animated fadeInRight">
         <div class="mail-box-header">
            <h2>
               {{ membre.nom }}
               {% if membre.desactive %}
                  <span class="badge badge-warning">Désactivé</span>
               {% else %}
                  <span class="badge badge-success">Actif</span>
               {% endif %}
            </h2>
         </div>
         <div class="mail-box">
            <div class="mail-body">
               <div class="form-horizontal">
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Profile</label>
                     <div class="col-sm-6">
                        <input type="file" class="form-control" id="membre_logo">
                     </div>
                     <div class="col-lg-4">
                        <img src="{{ membre.img ? membre.img : asset('img/picture.png') }}" id="membre_img" class="img-thumbnail photo-avatar pull-right">
                     </div>
                  </div>
                  <div class="form-group">
                  </div>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Nom</label>
                     <div class="col-sm-10">
                        <input type="text" class="form-control" value="{{ membre.nom }}" id="nom">
                     </div>
                  </div>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Poste</label>
                     <div class="col-sm-10">
                        <input type="text" class="form-control" value="{{ membre.poste }}" id="poste">
                     </div>
                  </div>
               </div>
            </div>
            <div class="mail-body text-right tooltip-demo">

               {% if membre.desactive %}
                  <button class="btn btn-info btn-sm" id="btn-enable-membre">
                     <i class="fa fa-check"></i> Activer
                  </button>
               {% else %}
                  <button class="btn btn-warning btn-sm" id="btn-disable-membre">
                     <i class="fa fa-times"></i> Désactiver
                  </button>
               {% endif %}

               <button class="btn btn-danger btn-sm" id="btn-delete-membre">
               <i class="fa fa-trash-o"></i> Supprimer
               </button>
               <button class="btn btn-primary btn-sm" id="btn-save-membre">
               <i class="fa fa-save"></i> Enregistrer
               </button>
            </div>
            <div class="clearfix"></div>
         </div>
      </div>
   </div>
</div>
{% endblock %}