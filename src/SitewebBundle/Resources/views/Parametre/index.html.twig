{% extends 'base.html.twig' %}
{% block stylesheets %}
   {{ parent() }}
   <link rel="stylesheet" href="{{ asset('css/plugins/jqGrid/ui.jqgrid.css') }}">

{% endblock  %}
{% block scripts %}
   {{ parent() }}
   <script src="{{ asset('js/plugins/jqGrid/jquery.jqGrid.min.js') }}"></script>
{% endblock %}
{% block contenu %}
<input type="hidden" id="id_siteweb" value="{{ siteweb.id }}">
<div class="wrapper wrapper-content">
   <div class="row">
      <div class="col-lg-2">
         <div class="ibox float-e-margins">
            <div class="ibox-content mailbox-content">
               <div class="file-manager">
                  <a class="btn btn-block btn-primary compose-mail" href="{{ siteweb.lien }}" target="_blank">
                  {{ siteweb.nom }} <i class="fa fa-external-link"></i>
                  </a>
                  <div class="space-25"></div>
                  {{ render(controller('SitewebBundle:Default:menu', { id: siteweb.id } )) }}
                  <div class="clearfix"></div>
               </div>
            </div>
         </div>
      </div>
      <div class="col-lg-10 animated fadeInRight">
         <div class="mail-box-header">
            <h2>
               Paramètre
            </h2>
         </div>
         <div class="mail-box">
            <div class="mail-body">
               <div class="form-horizontal">

               	  <h3><u>CLÉ D'INTEGRATION</u></h3>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">sitekey</label>
                     <div class="col-sm-10">
                        <input type="text" class="form-control" value="{{ siteweb.cle }}" id="cle" readonly="">
                     </div>
                  </div>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">token</label>
                     <div class="col-sm-10">
                        <input type="text" class="form-control" value="{{ config ? config.apiKey : ''}}" readonly="">
                     </div>
                  </div>

                  {# <h3><u>SMTP</u></h3>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Hébergeur SMTP</label>
                     <div class="col-sm-10">
                        <input type="text" class="form-control" value="">
                     </div>
                  </div>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Cryptage</label>
                     <div class="col-sm-10">
                     	<select class="form-control">
                     		<option value="">Aucun</option>
                     		<option value="">SSL</option>
                     		<option value="">TLS</option>
                     	</select>
                     </div>
                  </div>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Port SMTP</label>
                     <div class="col-sm-10">
                        <input type="text" class="form-control" value="">
                     </div>
                  </div>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Identifiant SMTP</label>
                     <div class="col-sm-10">
                        <input type="text" class="form-control" value="">
                     </div>
                  </div>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Mot de passe SMTP</label>
                     <div class="col-sm-10">
                        <input type="password" class="form-control" value="">
                     </div>
                  </div> #}

               </div>
            </div>
            {# <div class="mail-body text-right tooltip-demo">
               <button class="btn btn-primary btn-sm" id="btn-save-parametre">
               <i class="fa fa-save"></i> Enregistrer
               </button>
            </div> #}
            <div class="clearfix"></div>
         </div>
      </div>
   </div>
</div>
{% endblock %}