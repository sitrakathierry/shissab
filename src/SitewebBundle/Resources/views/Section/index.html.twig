{% extends 'base.html.twig' %}
{% block stylesheets %}
   {{ parent() }}
   <link rel="stylesheet" href="{{ asset('css/plugins/jqGrid/ui.jqgrid.css') }}">

{% endblock  %}
{% block scripts %}
   {{ parent() }}
   <script src="{{ asset('js/plugins/jqGrid/jquery.jqGrid.min.js') }}"></script>
   <script src="{{ asset('bundles/siteweb/js/section.js') }}"></script>
{% endblock %}
{% block contenu %}
<input type="hidden" id="id_siteweb" value="{{ siteweb.id }}">
<div class="wrapper wrapper-content">
   <div class="row">
      <div class="col-lg-2">
         <div class="ibox float-e-margins">
            <div class="ibox-content mailbox-content">
               <div class="file-manager">
                  <a class="btn btn-block btn-primary compose-mail" href="{{ siteweb.lien }}" target="_blank">
                  {{ siteweb.nom }} <i class="fa fa-external-link"></i>
                  </a>
                  <div class="space-25"></div>
                  {{ render(controller('SitewebBundle:Default:menu', { id: siteweb.id } )) }}
                  <div class="clearfix"></div>
               </div>
            </div>
         </div>
      </div>
      <div class="col-lg-10 animated fadeInRight">
         <div class="mail-box-header">
            <h2>
               Sections
            </h2>
         </div>
         <div class="mail-box">
            <div class="mail-body">
               <div class="form-horizontal">
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Nom</label>
                     <div class="col-sm-10">
                        <input type="text" class="form-control" id="nom">
                        <input type="hidden" id="slug">
                     </div>
                  </div>
                  <div class="form-group">
                     <label class="col-sm-2 control-label">Type</label>
                     <div class="col-sm-10">
                     	<select class="form-control" id="type">
                     		<option></option>
                     		<option value="1">Texte simple</option>
                     		<option value="2">Editeur</option>
                     		<option value="3">Image</option>
                     	</select>
                     </div>
                  </div>
               </div>
            </div>
            <div class="mail-body text-right tooltip-demo">
               <button class="btn btn-primary btn-sm" id="btn-save-section">
               <i class="fa fa-save"></i> Enregistrer
               </button>
            </div>
            <div class="clearfix"></div>
            <div class="hr-line-dashed"></div>

            <table class="table table-bordered">
               <thead>
                  <tr>
                     <th>Nom</th>
                     <th>Type</th>
                     <th>Slug</th>
                     <th></th>
                  </tr>
               </thead>
               <tbody>
                  {% for section in sections %}
                     <tr>
                        <td>{{ section.nom }}</td>
                        <td>
                           {% if section.type == 1 %}
                              Texte simple
                           {% endif %}
                           {% if section.type == 2 %}
                              Editeur
                           {% endif %}
                           {% if section.type == 3 %}
                              Image
                           {% endif %}
                        </td>
                        <td>{{ section.slug }}</td>
                        <td></td>
                     </tr>
                  {% endfor %}
               </tbody>
            </table>
         </div>
      </div>
   </div>
</div>
{% endblock %}