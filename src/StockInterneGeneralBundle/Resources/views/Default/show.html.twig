{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/plugins/jqGrid/ui.jqgrid.css') }}">
 {% endblock  %}
{% block scripts %}
{{ parent() }}
<script src="{{ asset('js/plugins/jqGrid/jquery.jqGrid.min.js') }}"></script>
<script src="{{ asset('bundles/stockinternegeneral/js/add.js') }}"></script>
{% endblock %}

{% block contenu %}
	<input type="hidden" id="id" value="{{ stockInterne.id }}">
    <div class="wrapper wrapper-content">
        <div class="row">
        	<div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5 >
                            {{ stockInterne.nom }}
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Nom</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" required="" id="nom" value="{{ stockInterne.nom }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label prix">Prix achat ({{ agence.deviseSymbole }})</label>
                                        <div class="col-sm-10">
                                            <input type="number" class="form-control" required="" id="prix" value="{{ stockInterne.prix }}" readonly="">
                                        </div>
                                    </div>
                                </div>
                        	</div>

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label qte">Stock</label>
                                        <div class="col-sm-10">
                                            <input type="number" class="form-control" required="" id="qte" value="{{ stockInterne.stock }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label unite">Unité</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" required="" id="unite" value="{{ stockInterne.unite }}">
                                        </div>
                                    </div>
                                </div>
                        	</div>

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label portion">Produit en stock</label>
                                        <div class="col-sm-10">
                                            <input type="number" class="form-control" required="" id="portion" value="{{ stockInterne.portion }}" readonly="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label libelle">Libellé</label>
                                        <div class="col-sm-10">
                                            <select class="form-control" id="libelle">
                                                <option></option>
                                                {% for libelle in libelles %}
                                                    <option 
                                                        value="{{ libelle.id }}"
                                                        {% if stockInterne.libelleGeneral %}
                                                            {% if stockInterne.libelleGeneral.id == libelle.id %}
                                                                selected=""
                                                            {% endif %} 
                                                        {% endif %}
                                                    >{{ libelle.nom }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                        	</div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label total">Total ({{ agence.deviseSymbole }})</label>
                                        <div class="col-sm-10">
                                            <input type="number" class="form-control" required="" id="total" readonly="" value="{{ stockInterne.stock * stockInterne.prix }}">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        	<div class="row">
                        		<div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label description">Description</label>
                                        <div class="col-sm-10">
                                            <textarea id="description" class="summernote">
                                            	{{ stockInterne.description | raw }}
                                            </textarea>
                                        </div>
                                    </div>
                                </div>
                        	</div>

                            <div class="hr-line-dashed"></div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <!-- <div class=""> -->
                                        {# <button class="btn btn-white" type="reset">
                                            <i class="fa fa-times"></i>
                                            Annuler
                                        </button> #}
                                        <button class="btn btn-primary" id="btn-save">
                                            <i class="fa fa-save"></i>
                                            Mettre à jour
                                        </button>
                                    <!-- </div> -->
                                </div>
                            </div>
                            <input type="hidden" name="id" id="id" value="0">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

